<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <table>
    <tr>
      <th>Logs</th>
    </tr>
    <% @user.logs.each do |log| %>
      <tr>
        <td>
          <%= link_to(log.filename, {:controller =>'log', :action => 'profile', :id => log.id})%>
        </td>
      </tr>
    <% end %>
  </table>
</div>
